<!doctype html>
<html lang="en">
<head>
	<title>遠端多媒體看板</title>
	<script src='../tool/jquery-1.12.4.js'></script>
	<script>
	$(document).ready(function(){
		setInterval(function(){
			$.ajax({
				url:'./viewlist.ajax.php',
				async:false,
				dataType:'html',
				success:function(d){
					console.log(d);
					$('.view').html(d);
				},
				error:function(e){
					console.log(e);
				}
			});
		},1000);
	});
	</script>
</head>
<body style='background-color:#000000;color:#ffffff;'>
	<div class='view' style='font-size:30px;font-weight:bold;font-family: Consolas,Microsoft JhengHei,sans-serif;'>
	</div>
</body>
</html>
